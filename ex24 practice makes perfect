five = 10 - 2 + 3 -6
print "This should be five: %s" % five


def secret_formula(started):
	jelly_beans = started * 500
	cupcakes = jelly_beans / 1000
	brownies = cupcakes / 100
	return jelly_beans, cupcakes, brownies


start_point = 10000
jelly_beans, cupcakes, brownies = secret_formula(start_point)


print "With a starting point of: %d" % start_point
print "We'd have %d jelly beans, %d cupcakes, and %d brownies." % (jelly_beans, cupcakes, brownies)


start_point = start_point / 10 


print "We can also do that this way: "
print "We'd have %d jelly beans, %d cupcakes, and %d brownies." % secret_formula(start_point)
